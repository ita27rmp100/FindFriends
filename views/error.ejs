<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<style>
    body {
        background: linear-gradient(135deg, #ff6a6a 0%, #ffd6d6 100%);
        font-family: 'Segoe UI', Arial, sans-serif;
        color: #333;
        margin: 0;
        padding: 0;
    }
    .error-container {
        max-width: 500px;
        margin: 80px auto;
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.15);
        padding: 40px 32px;
        text-align: center;
    }
    pre {
        background: #f8d7da;
        color: #721c24;
        padding: 18px;
        border-radius: 8px;
        overflow-x: auto;
        font-size: 1rem;
        margin-top: 20px;
        text-align: left;
    }
    @media (max-width: 600px) {
        .error-container {
            padding: 20px 8px;
        }
    }
</style>

<div class="container">
    <div class="error-container shadow-lg">
        <h1 class="display-4 text-danger mb-2"><%= message %></h1>
        <h2 class="h4 text-secondary mb-4">Status: <%= error.status %></h2>
        <pre class="mb-4"><%= error.stack %></pre>
        <a href="/" class="btn btn-danger btn-lg">Go Home</a>
    </div>
</div>
