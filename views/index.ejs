<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- link files and documents -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="icon" href="/images/SendAnony.png"> 
    <title>Find Friends</title>
</head>
<body>
    <!-- The navbar -->
    <nav class="navbar navbar-light bg-light d-flex row justify-content-around overflow-hidden">
        <section class="navbar-brand mb-0 h1">Find Friends</section>
        <div class="d-flex row headForms">
            <form action="/new" method="post">
                <input type="submit" value="New Chat" class="btn btn-outline-success">
            </form>
        </div>
    </nav>
    <!-- the chat field -->
    <nav class="container-fluid chat">
        <!-- chat messages list -->
        <div class="p-3 msgs">
            <!-- we'll put here ejs code when we start backend -->
            <!-- Enter your name in during the current session chats -->
            <!-- < formName %> -->
            <div class="row justify-content-center align-items-center text-center">
                <form class="card bg-light" action="/" method="post">
                    <div class="card-body p-3">
                        <!-- Name -->
                        <div class="input-group mb-3">
                            <div class="input-group-append InputTitle">
                                <span class="input-group-text" id="name">Name</span>
                            </div>
                            <input type="text" maxlength="30" placeholder="Nick/Real name ..." name="username" class="form-control">
                        </div>
                        <!-- Gender -->
                        <div class="input-group mb-3">
                            <div class="input-group-append InputTitle">
                                <span class="input-group-text" id="Gender">Gender</span>
                            </div>
                            <select name="gender" id="gender" class="form-control">
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                            </select>
                        </div>
                        <!-- contact -->
                        <div class="input-group mb-3">
                            <div class="input-group-append InputTitle">
                                <span class="input-group-text" id="Gender">Gender</span>
                            </div>
                            <select name="gender" id="gender" class="form-control">
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                            </select>
                        </div>
                        <!-- country -->
                         <div class="input-group mb-3">
                            <div class="input-group-append InputTitle">
                                <span class="input-group-text" id="Gender">Gender</span>
                            </div>
                            <select name="gender" id="gender" class="form-control">
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="card-footer justify-content-center log">
                        <input type="submit" value="Search" class="btn btn-success text-light">
                    </div>
                </form>
            </div>
        </div>
    </nav>
    <!-- scrtipts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="/javascripts/script.js"></script>
</body>
</html>