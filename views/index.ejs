<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./master/head.ejs') %>
    <!-- title -->
    <title>Find Friends</title>
</head>
<body>
    <%- include('./master/navbar.ejs') %>
    <!-- the chat field -->
    <nav class="container chat">
        <!-- chat messages list -->
        <div class="p-3 msgs">
            <div class="row justify-content-center align-items-center text-center">
                <form class="card bg-light" action="/" method="post" enctype="multipart/form-data">
                    <div class="card-body p-3">
                        <!-- Name -->
                        <div class="input-group mb-3">
                            <div class="input-group-append InputTitle">
                                <span class="input-group-text" id="name">Name</span>
                            </div>
                            <input type="text" maxlength="30" placeholder="Enter your name (nick name) ..." name="username" class="form-control">
                        </div>
                        <!-- avatar -->
                        <div class="input-group mb-3">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="inputGroupFile01">
                                <label class="custom-file-label text-left" for="inputGroupFile01">Choose file (jpg, png, jpeg ... etc)</label>
                            </div>
                        </div>
                        <!-- Gender -->
                        <div class="input-group mb-3">
                            <div class="input-group-append InputTitle">
                                <span class="input-group-text" id="Gender">Gender</span>
                            </div>
                            <select name="gender" id="gender" class="form-control">
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                            </select>
                        </div>
                        <!-- country -->
                        <div class="input-group mb-3">
                            <div class="input-group-append InputTitle">
                                <span class="input-group-text" id="Gender">Country</span>
                            </div>
                            <input list="countries" name="country" id="country" class="form-control" placeholder="Choose or type a country">
                            <datalist id="country">
                            </datalist>
                        </div>
                        <!-- contact -->
                        <div class="input-group mb-3">
                            <select name="contact-src" id="contact-src" class="form-control pr-2 rounded-pill shadow-sm" style="max-width: 140px; font-weight: 500;" aria-label="Contact Method" required aria-placeholder="select platform">
                                <option value="facebook">FaceBook</option>
                                <option value="instagram">Instagram</option>
                                <option value="telegram">Telegram</option>
                                <option value="whatsapp">WhatsApp</option>
                                <option value="snapchat">Snapchat</option>
                            </select>
                            <input type="text" maxlength="50" placeholder="Your account or link" name="contact-link" class="form-control" aria-label="Contact Account" required>
                        </div>
                        <!-- language -->
                         <div class="input-group mb-3 d-block text-left">
                            <label for="langs" class="text">I speak : </label>
                            <div class="d-flex flex-wrap">
                                <div class="custom-control custom-checkbox mr-3">
                                    <input type="checkbox" class="custom-control-input" name="langs" id="lang-ar" value="Arabic">
                                    <label class="custom-control-label" for="lang-ar">
                                        <img src="https://flagcdn.com/16x12/dz.png" alt="Arabic" class="mr-1"> Arabic
                                    </label>
                                </div>
                                <div class="custom-control custom-checkbox mr-3">
                                    <input type="checkbox" class="custom-control-input" name="langs" id="lang-en" value="English">
                                    <label class="custom-control-label" for="lang-en">
                                        <img src="https://flagcdn.com/16x12/us.png" alt="English" class="mr-1"> English
                                    </label>
                                </div>
                                <div class="custom-control custom-checkbox mr-3">
                                    <input type="checkbox" class="custom-control-input" name="langs" id="lang-fr" value="French">
                                    <label class="custom-control-label" for="lang-fr">
                                        <img src="https://flagcdn.com/16x12/fr.png" alt="French" class="mr-1"> French
                                    </label>
                                </div>
                                <div class="custom-control custom-checkbox mr-3">
                                    <input type="checkbox" class="custom-control-input" name="langs" id="lang-es" value="Spanish">
                                    <label class="custom-control-label" for="lang-es">
                                        <img src="https://flagcdn.com/16x12/es.png" alt="Spanish" class="mr-1"> Spanish
                                    </label>
                                </div>
                            </div>
                        </div>
                        <!-- topics -->
                         <div class="input-group mb-3 d-block text-left">
                            <label for="topics" class="text">Interested topics : (chose only three) </label>
                            <div class="d-flex flex-wrap" id="topics">
                            </div>
                        </div>
                    </div>
                    <div class="card-footer justify-content-center log">
                        <input type="submit" value="Search" class="btn btn-success text-light">
                    </div>
                </form>
            </div>
        </div>
    </nav>
    <!-- <div class="container mt-4">
    </div> -->
    <!-- scrtipts -->
    <%- include('./master/scripts.ejs') %>
</html>